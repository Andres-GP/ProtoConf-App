<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/BackgroundColor"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvItemScheduleConferenceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conference name"
                android:textColor="@color/white"
                android:textSize="@dimen/ScheduleItem_topicTitle"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/tvItemScheduleConferenceSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Speaker name"
                android:textColor="@color/schedule_name_textColor"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/tvItemScheduleHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="00:00 AM"
                android:textColor="@color/schedule_name_textColor"
                android:textSize="@dimen/ScheduleItem_name"
                />
            <TableRow
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="8dp"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>